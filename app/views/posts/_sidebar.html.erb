<div class="sidebar">
    <ul>
        <% @categories.each do |category| %>
        <li><%= category.name %></li>
        <ul>
            <% category.posts.each do |post| %>
            <li><%= link_to post.title, post_path(post.id) %></li>
            <% end %>
        </ul>
        <% end %>
    </ul>
</div>